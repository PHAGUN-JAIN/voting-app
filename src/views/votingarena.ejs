</head>

<body>
    <h1>

    </h1>
    <br>

    <br>
    <div class="table-container">
        <table>
            <tr>
                <th>Candidate Id</th>
                <th>Candidate Name</th>
                <th>VOTES</th>

            </tr>

            <tr>
                <td>
                    <%=id1%>
                </td>
                <td>
                    <%=name1%>
                </td>
                <td>
                    <%=vote1%>
                </td>

            </tr>
            <tr>
                <td>
                    <%=id2%>
                </td>
                <td>
                    <%=name2%>
                </td>
                <td>
                    <%=vote2%>
                </td>

            </tr>

        </table>
        <form id="form" action="http://localhost:3000/voting/castvote" method="post">
            <input type="email" name="email" id="email" placeholder="email">
            <input type="text" name="name" placeholder="full name">
            <input type="number" name="sap" placeholder="sapID">
            <select name="candidateid" id="candidateid">
                <option value="1">
                    <%=name1%>
                </option>
                <option value="2">
                    <%=name2%>
                </option>
            </select>
            <input type="submit" value="Cast My Vote! ">
        </form>
    </div>

